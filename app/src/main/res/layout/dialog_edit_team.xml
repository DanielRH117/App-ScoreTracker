<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="13dp"
        android:background="@color/background_component"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partidos Jugados"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_pj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="PJ"
        android:textColor="@color/white"
        android:textColorHint="@color/background_text"
        android:backgroundTint="@color/background_text"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goles"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/ETgolesFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Goles a Favor"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/background_text"
        android:backgroundTint="@color/background_text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/ETgolesContra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Goles en Contra"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/background_text"
        android:backgroundTint="@color/background_text"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puntos"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_pts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Pts"
        android:textColor="@color/white"
        android:textColorHint="@color/background_text"
        android:backgroundTint="@color/background_text"
        android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>