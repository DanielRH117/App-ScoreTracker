<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoreTracker"
        tools:targetApi="31">

        <activity
            android:name=".TournamentDetails"
            android:exported="false"
            android:parentActivityName=".AdminLogin"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminLogin" />
        </activity>

        <activity
            android:name=".NewTournament"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LostPassword"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AdminLogin"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Register"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AdminLeague"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ConsultLeague"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LogIn"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
